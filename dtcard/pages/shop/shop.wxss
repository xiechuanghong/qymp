.ptn-fixed {
  position: relative;
  /* position: fixed; */
  display: flex;
  /* top: 112rpx; */
  padding-left: 32rpx;
  /* width: 100%; */
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
  background-color: #fff;
}

.ptn-fixed.fixednav {
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
}

.ptn-fixed .search {
  display: flex;
  position: relative;
}

.ptn-fixed .search input {
  height: 64rpx;
  background-color: #f3f4f6;
  border-radius: 32rpx;
  padding-left: 56rpx;
  width: 270rpx;
}

.ptn-fixed .search image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  margin: 0;
}

.ptn-fixed image {
  width: 96rpx;
  height: 96rpx;
  margin-left: 16rpx;
}

.ptn-fixed .dis-flex {
  display: flex;
  position: relative;
}

.ptn-fixed .shop-cart-box {
  margin-left: 32rpx;
  position: relative;
}

.ptn-fixed .text {
  position: absolute;
  left: 108rpx;
  top: 4rpx;
  background: #f15050;
  border-radius: 12rpx;
  color: #fff;
  padding: 0 4rpx;
  font-family: PingFangSC-Medium;
}

.tab-h-nav {
  position: fixed;
  top: 96rpx;
  z-index: 1;
  width: 100%;
}

