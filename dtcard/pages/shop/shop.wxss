swiper scroll-view {
  width: 100%;
  height: 100%;
}

.item-box {
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 32rpx;
  overflow: hidden;
  background-color: #f2f2f2;
}

.item-box.mgn-top {
  margin-top: 194rpx;
} 

.item-box .item {
  width: 334rpx;
  height: 520rpx;
  background-color: #fff;
  margin-bottom: 18rpx;
  border-radius: 8rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.item-box .item .box-img {
  width: 100%;
  height: 334rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#ebebeb;
}

.item-box .item .goods-img {
  width: 100%;
  height: 100%;
  background-color: #ebebeb;
}

.item-box .item .goods-detail {
  flex: 1;
  padding: 16rpx;
  word-wrap: break-word;
}

.item-box .goods-detail .depict {
  font-family: PingFangSC-Regular;
  display: inline-block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #041a27;
  font-size: 15px;
  /* line-height: 82rpx; */
  height: 84rpx;
}

.item-box .add-goods {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-box .add-goods .price {
  font-family: HelveticaNeue-Medium;
  font-size: 17px;
  color: #f4582c;
  /* line-height: 42rpx; */
}

.item-box .price text {
  font-family: Helvetica-Bold;
  font-size: 10px;
  color: #f4582c;
  margin-right: 8rpx;
}

.item-box .add-goods image {
  width: 48rpx;
  height: 48rpx;
}

