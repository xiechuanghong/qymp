/* 数据列表加载没有更多了 */

.period {
  padding: 48rpx 0 64rpx;
  text-align: center;
  font-size: 12px;
  color: #8b9199;
  background-color: #f2f2f2;
}

.period-text {
  position: relative;
}

.period-text::after {
  content: '';
  width: 204rpx;
  height: 2rpx;
  background: #ebebeb;
  position: absolute;
  left: 80rpx;
  top: 16rpx;
}

.period-text::before {
  content: '';
  width: 204rpx;
  height: 2rpx;
  background: #ebebeb;
  position: absolute;
  right: 80rpx;
  top: 16rpx;
}

button::after {
  border: none;
}

button {
 background-color: #fff;
 display: inline;
 padding: 0;
 line-height: 0;
 margin: 0;
 font-size: 14px;
}
